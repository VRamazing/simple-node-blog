 <!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">{{post.title}}</h1>

        <!-- Author -->
        <p class="lead">
          by
          <a href="#">{{post.author}}</a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on {{convertDateToLocal post.createdDate}}</p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded card-img-blog" src="{{post.thumbnail}}" alt="{{post.title}} image">

        <hr>

        <!-- Post Content -->
        <p>{{post.content}}</p>

        <hr>

      </div>

      {{>sideWidget}}
      
    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->