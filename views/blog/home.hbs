    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <h1 class="my-4">
                Welcome to my blog
            </h1>

            {{#each posts}}
                <!-- Blog Post -->
                <div class="card mb-4">
                    <img class="card-img-top card-img-blog" src="{{this.thumbnail}}" alt="{{this.title}} image_thumbnail">
                    <div class="card-body">
                        <h2 class="card-title">{{this.title}}</h2>
                        <p class="card-text">{{{substr this.content}}}</p>
                        <a href="{{this.detailLink}}" class="btn btn-primary">Read More &rarr;</a>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on {{convertDateToLocal this.createdDate}} by
                        <a href="#">{{this.author}}</a>
                    </div>
                </div>
            {{/each}}

            {{#if noPosts}}
                <!-- Pagination -->
                <ul class="pagination justify-content-center mb-4">
                    <li class="page-item">
                    <a class="page-link" href="#">&larr; Older</a>
                    </li>
                    <li class="page-item disabled">
                    <a class="page-link" href="#">Newer &rarr;</a>
                    </li>
                </ul>
            {{/if}}

        </div>

        {{>sideWidget}}

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
