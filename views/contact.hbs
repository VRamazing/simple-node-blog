<div class="container">
  <h4>Share your queries. <br> <small>I tend to reply within a day</small></h4>
  
  <br/>

   {{#if hasErrors }}
    <div class="alert alert-danger">
      {{#each messages}}
        {{this}}
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      {{/each}}
    </div>
  {{/if }}

  <form name="post-form" method="post" action="/sendmail?_csrf={{csrfToken}}">
   
   <!-- name -->
   <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text icon-label-group"><i class="fa fa-user"></i><span class="label-input">Name</span></span>
		  </div>
      <input name="name" class="form-control" placeholder="Email your name" type="text" /> 
    </div> 

    <!-- email -->
    <div class="form-group input-group">
    	<div class="input-group-prepend">
		    <span class="input-group-text icon-label-group"><i class="fa fa-envelope"></i><span class="label-input">Email</span></span>
		  </div>
      <input name="email" class="form-control" placeholder="Email your email address" type="email" /> 
    </div> 

      <!-- message -->
    <div class="form-group input-group">
      <div class="input-group-prepend">
        <span class="input-group-text icon-label-group"><i class="fa fa-paragraph"></i><span class="label-input">Message</span></span>
      </div>
      <textarea name="message" class="form-control" placeholder="Enter your message" rows="4" required></textarea>
    </div>


    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <button type="submit" class="btn btn-primary btn-block">Send message</button>
  </form>
